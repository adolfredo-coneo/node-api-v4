//init node project
npm init --yes

//install express
npm install express
npm i --save-dev @types/express

//prisma - cli tool
npm i typescript ts-node @types/node prisma --save-dev
npx prisma init
npx prisma format //fixes formatting and errrors

//prisma client
npm i @prisma/client --save
npx prisma migrate dev --name init
npx prisma studio

//morgan
npm i morgan --save
npm i --save-dev @types/morgan

//cors
npm i cors --save
npm i --save-dev @types/cors

//jwt bcrypt dotenv
npm i jsonwebtoken bcrypt dotenv --save

//express-validator
npm i express-validator --save

//git
git init
git add .
git commit -m "first commit"
git branch -M main
git remote add origin https://github.com/adolfredo-coneo/node-api-v4.git
git push -u origin main